<Window x:Class="SimpleWPFWork.WPFUI.ModernMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" 
        Height="250" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="10" Background="White" BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    x:Name="HeaderBorder"
                    Background="#00D9A3" 
                    CornerRadius="10,10,0,0" 
                    Padding="20">
                <Grid>
                    <TextBlock x:Name="TitleText" 
                               Text="Success" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="30,30,30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <TextBlock x:Name="IconText" 
                           Grid.Column="0" 
                           Text="✅" 
                           FontSize="48" 
                           VerticalAlignment="Center" 
                           Margin="0,0,20,0"/>

                <!-- Message -->
                <TextBlock x:Name="MessageText" 
                           Grid.Column="1" 
                           Text="Operation completed successfully!" 
                           FontSize="14" 
                           TextWrapping="Wrap" 
                           VerticalAlignment="Center"
                           Foreground="#2C3E50"/>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#F8F9FA" 
                    CornerRadius="0,0,10,10" 
                    Padding="20">
                <Button x:Name="OkButton" 
                        Content="OK" 
                        Click="OkButton_Click"
                        Background="#00D9A3" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="14" 
                        BorderThickness="0" 
                        Padding="30,10" 
                        Cursor="Hand"
                        HorizontalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#00C794"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>